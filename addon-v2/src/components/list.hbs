{{yield}}
 {{!-- <FromElsewhere @name="list" as |timer|>
<div>{{timer}}</div>
</FromElsewhere> --}}

<Search @changebysearch={{this.changebysearch}} @setChildReference={{action 'setChildReference'}} @availablechoices={{this.datatable.data}} @keyvalues={{this.keyvalues}}/>

{{#if this.popup}}
  <Edit @closepopup={{action this.closepopup}} @head={{this.datatable.data}} @editid={{this.editid}}/>
{{/if}}
{{!-- @searchEnabled={{true}} --}}
<br>
<PowerSelectMultiple @options={{this.showitem}} @labelText="Show items:"
     @selected={{this.selectedItems}} @onChange={{this.onshowitemschange}} 
     @onClose={{this.checkclickoutside}}  as |option|>

    {{option.name}}

</PowerSelectMultiple>

<br>

{{#each this.trackedarray as |item index|}}
 {{#if (eq index 0)}}
     <tr> 

      {{#each-in this.showitem as |key-item item-val|}}
           {{#if item-val.visibility}}
               <th>
                <div class="header-content">
                <span class="header-text">{{item-val.name}}</span>
                <div class="sort-button">
                <button onclick={{action this.sorting item-val.name true}} type="button"  >/\</button><br>
                <button onclick={{action this.sorting item-val.name false}} type="button" >\/</button>

                </div>
                </div>
               </th>  
           {{/if}} 
      {{/each-in}}

      <th>  <button onclick={{action this.delete}} type="button" >Delete</button>
          <button onclick={{this.edit}} type="button" >Edit</button>    </th>

     </tr>
    
  {{/if}}

  {{#if item.setting.visibility}}
    <tr>
      {{#each-in item as |cell value|}}
        {{#each-in this.showitem as |key-item item-val|}}
          {{#if (eq item-val.name cell)}}
           {{#if item-val.visibility}}
             <td>{{value}}</td>
            {{/if}}
            
          {{/if}} 
   
        {{/each-in}}
       
        
      {{/each-in}} 

  <td>
   {{input type="checkbox" checked=item.setting.ischecked onchange=(action "togglecheckbox" item)}}
    </td>

    </tr>
    {{/if}}
{{/each}}

<br>
{{!-- {{input type="text" value=this.limit label="Page Size:" onchange=(action this.changelimit)}} --}}
<label for="limit">Page size :</label>
<input type="text" {{on "input" (action this.changelimit)}} value={{this.limit}}>

<button onclick={{this.previouspage}} type = "button">previous</button>
{{this.pageno}}
<button onclick={{this.nextpage}} type="button">next</button>


{{#if this.loadingfetch}}

<div class="overlay">
<div class="edit-container">
<div class="edit-title">

<h2>Loading......</h2>

</div>
</div>
</div>
{{/if}}

